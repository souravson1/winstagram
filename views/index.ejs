<% include ./partials/header.ejs %>
  <div class="login">
    <div class="form-div">
      <form class="w-full" action="/register" method="POST">
        <img class="instaLogo" src="./images/instaLogo.png" alt="logo" />
        <input
          type="text"
          class="input"
          placeholder="username"
          name="username"
          required
        />
        <input
          type="email"
          class="input"
          placeholder="email"
          name="email"
          required
        />
        <input
          type="text"
          class="input"
          placeholder="name"
          name="name"
          required
        />
        <input
          type="password"
          class="input"
          placeholder="Password"
          name="password"
          required
        />
        <button class="login-btn">Sign Up</button>
        <p id="or">or</p>
        <a href="#" class="fb-login"
          ><i class="bx bxl-facebook-square"></i>Log in with Facebook</a
        >
      </form>
      <div class="sign-up">
        <p>Already have an account ? <a href="/login" class="sign-link">Log In</a></p>
      </div>
      <div class="get-app">
        <p>Get the app</p>
        <div class="store">
          <img id="play" src="./images/playStore.png" alt="" />
          <img id="microsoft" src="./images/getMicrosoft.png" alt="" />
        </div>
      </div>
    </div>
  </div>
<% include ./partials/footer.ejs %>